2Ftrans-decl.c?ref=a31a3d0421f0cf1f7eefacfec8cbf37e7f91600d", "patch": "@@ -6837,6 +6837,13 @@ gfc_conv_cfi_to_gfc (stmtblock_t *init, stmtblock_t *finally,\n       gfc_add_modify (&block, sym->ts.u.cl->backend_decl, tmp);\n     }\n \n+  if (sym->ts.type == BT_CHARACTER\n+      && !INTEGER_CST_P (sym->ts.u.cl->backend_decl))\n+    {\n+      gfc_conv_string_length (sym->ts.u.cl, NULL, init);\n+      gfc_trans_vla_type_sizes (sym, init);\n+    }\n+\n   /* gfc->data = cfi->base_addr - or for scalars: gfc = cfi->base_addr.\n      assumed-size/explicit-size arrays end up here for character(len=*)\n      only. */"}, {"sha": "48b495b1d2969c60223148192508c9295f0aa5f2", "filename": "gcc/testsuite/gfortran.dg/lto/bind-c-char_0.f90", "status": "added", "additions": 49, "deletions": 0, "changes": 49, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/a31a3d0421f0cf1f7eefacfec8cbf37e7f91600d/gcc%2Ftestsuite%2Fgfortran.dg%2Flto%2Fbind-c-char_0.f90", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/a31a3d0421f0cf1f7eefacfec8cbf37e7f91600d/gcc%2Ftestsuite%2Fgfortran.dg%2Flto%2Fbind-c-char_0.f90", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/gcc%2Ftestsuite%2Fgfortran.dg%2Flto%2Fbind-c-char_0.f90?ref=a31a3d0421f0cf1f7eefacfec8cbf37e7f91600d", "patch": "@@ -0,0 +1,49 @@\n+! { dg-lto-do link }\n+! { dg-lto-options {{ -O0 -flto }} }\n+!\n+! PR fortran/102885\n+\n+module m\n+  use iso_c_binding, only: c_char\n+  implicit none (type, external)\n+\n+contains\n+\n+! Assumed-shape array, nonallocatable/nonpointer\n+\n+subroutine ar3 (xn, n) bind(C)\n+  integer :: n\n+  character(len=n) :: xn(..)\n+  if (size(xn) /= 6) stop\n+  if (len(xn) /= 5) stop  \n+  select rank(xn)\n+    rank(1)\n+      xn = ['FDGhf', &\n+            'hdrhg', &\n+            'fDgFl', &\n+            'DFHs3', &\n+            '4a54G', &\n+            'hSs6k']\n+  rank default\n+    stop\n+  end select\n+end\n+\n+end\n+\n+program main\n+  use m\n+  implicit none (type, external)\n+  character(kind=c_char, len=5) :: str5a6(6)\n+\n+  ! assumed rank - with array descriptor\n+\n+  str5a6 = ['DDGhf', &\n+            'hdrh$', &\n+            'fDGSl', &\n+            'DFHs3', &\n+            '43grG', &\n+            'hFG$k']\n+  call ar3 (str5a6, 5)\n+\n+end"}]}
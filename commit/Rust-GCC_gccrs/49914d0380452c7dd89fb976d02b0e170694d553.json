lify.c?ref=49914d0380452c7dd89fb976d02b0e170694d553", "patch": "@@ -1930,14 +1930,24 @@ gfc_simplify_len (gfc_expr * e)\n {\n   gfc_expr *result;\n \n-  if (e->expr_type != EXPR_CONSTANT)\n-    return NULL;\n-\n-  result = gfc_constant_result (BT_INTEGER, gfc_default_integer_kind,\n-\t\t\t\t&e->where);\n+  if (e->expr_type == EXPR_CONSTANT)\n+    {\n+      result = gfc_constant_result (BT_INTEGER, gfc_default_integer_kind,\n+\t\t\t\t    &e->where);\n+      mpz_set_si (result->value.integer, e->value.character.length);\n+      return range_check (result, \"LEN\");\n+    }\n \n-  mpz_set_si (result->value.integer, e->value.character.length);\n-  return range_check (result, \"LEN\");\n+  if (e->ts.cl != NULL && e->ts.cl->length != NULL\n+      && e->ts.cl->length->expr_type == EXPR_CONSTANT)\n+    {\n+      result = gfc_constant_result (BT_INTEGER, gfc_default_integer_kind,\n+\t\t\t\t    &e->where);\n+      mpz_set (result->value.integer, e->ts.cl->length->value.integer);\n+      return range_check (result, \"LEN\");\n+    }\n+  \n+  return NULL;\n }\n \n "}, {"sha": "7bd203ef2b5496975b04dd98cc494556a06db5f9", "filename": "gcc/testsuite/ChangeLog", "status": "modified", "additions": 5, "deletions": 0, "changes": 5, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/49914d0380452c7dd89fb976d02b0e170694d553/gcc%2Ftestsuite%2FChangeLog", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/49914d0380452c7dd89fb976d02b0e170694d553/gcc%2Ftestsuite%2FChangeLog", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/gcc%2Ftestsuite%2FChangeLog?ref=49914d0380452c7dd89fb976d02b0e170694d553", "patch": "@@ -1,3 +1,8 @@\n+2006-04-29  Francois-Xavier Coudert  <coudert@clipper.ens.fr>\n+\n+\tPR fortran/25681\n+\t* gfortran.df/char_type_len.f90: New test.\n+\n 2006-04-28  Jerry DeLisle  <jvdelisle@gcc.gnu.org>\n \n \tPR libgfortran/27304"}, {"sha": "706f9341fe0942a4d5abbfbadd048dedaf052bbb", "filename": "gcc/testsuite/gfortran.dg/char_type_len.f90", "status": "added", "additions": 12, "deletions": 0, "changes": 12, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/49914d0380452c7dd89fb976d02b0e170694d553/gcc%2Ftestsuite%2Fgfortran.dg%2Fchar_type_len.f90", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/49914d0380452c7dd89fb976d02b0e170694d553/gcc%2Ftestsuite%2Fgfortran.dg%2Fchar_type_len.f90", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/gcc%2Ftestsuite%2Fgfortran.dg%2Fchar_type_len.f90?ref=49914d0380452c7dd89fb976d02b0e170694d553", "patch": "@@ -0,0 +1,12 @@\n+! { dg-do run }\n+! Testcase for PR fortran/25681\n+program char_type_len\n+  integer,parameter :: n = 9\n+  type foo_t\n+     character (len = 80) :: bar (1)\n+     character (len = 75) :: gee (n)\n+  end type foo_t\n+  type(foo_t) :: foo\n+  \n+  if (len(foo%bar) /= 80 .or. len(foo%gee) /= 75) call abort\n+end program char_type_len"}]}
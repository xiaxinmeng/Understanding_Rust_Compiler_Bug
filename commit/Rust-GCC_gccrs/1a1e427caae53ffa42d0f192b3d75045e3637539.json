files": [{"sha": "ee7bcdc24a5790fa05022aa3869cbddaf22a0572", "filename": "libstdc++-v3/ChangeLog", "status": "modified", "additions": 4, "deletions": 0, "changes": 4, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/1a1e427caae53ffa42d0f192b3d75045e3637539/libstdc%2B%2B-v3%2FChangeLog", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/1a1e427caae53ffa42d0f192b3d75045e3637539/libstdc%2B%2B-v3%2FChangeLog", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/libstdc%2B%2B-v3%2FChangeLog?ref=1a1e427caae53ffa42d0f192b3d75045e3637539", "patch": "@@ -1,5 +1,9 @@\n 2019-05-10  Jonathan Wakely  <jwakely@redhat.com>\n \n+\tPR libstdc++/81266\n+\t* testsuite/util/thread/all.h: Do not use remove_pointer for\n+\tstd::thread::native_handle_type.\n+\n \tPR libstdc++/90397\n \t* include/std/variant (_Variant_storage<false, Types...>::_M_storage())\n \t(_Variant_storage<true, Types...>::_M_reset()))"}, {"sha": "2aacae4f2fc4ad680dee5f1ae0b7563b95cadb88", "filename": "libstdc++-v3/testsuite/util/thread/all.h", "status": "modified", "additions": 7, "deletions": 1, "changes": 8, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/1a1e427caae53ffa42d0f192b3d75045e3637539/libstdc%2B%2B-v3%2Ftestsuite%2Futil%2Fthread%2Fall.h", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/1a1e427caae53ffa42d0f192b3d75045e3637539/libstdc%2B%2B-v3%2Ftestsuite%2Futil%2Fthread%2Fall.h", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/libstdc%2B%2B-v3%2Ftestsuite%2Futil%2Fthread%2Fall.h?ref=1a1e427caae53ffa42d0f192b3d75045e3637539", "patch": "@@ -25,6 +25,7 @@\n #include <sstream>\n #include <stdexcept>\n #include <type_traits>\n+#include <thread>\n \n // C++11 only.\n namespace __gnu_test\n@@ -39,7 +40,12 @@ namespace __gnu_test\n \n       // Remove possible pointer type.\n       typedef typename test_type::native_handle_type native_handle;\n-      typedef typename std::remove_pointer<native_handle>::type native_type;\n+      // For std::thread native_handle_type is the type of its data member,\n+      // for other types it's a pointer to the type of the data member.\n+      typedef typename std::conditional<\n+\tstd::is_same<test_type, std::thread>::value,\n+\tnative_handle,\n+\ttypename std::remove_pointer<native_handle>::type>::type native_type;\n \n       int st = sizeof(test_type);\n       int snt = sizeof(native_type);"}]}
ant_pointer = 1;\n+\t\t  gfc_conv_expr (&se, e);\n+\t\t  gfc_free_expr (e);\n+\t\t  rhs = gfc_build_addr_expr (TREE_TYPE (se.expr),\n+\t\t\t\t\t     gfc_get_symbol_decl (vtab));\n+\t\t  gfc_add_modify (&init, se.expr, rhs);\n+\t\t}\n+\n \t      gfc_add_init_cleanup (block, gfc_finish_block (&init), tmp);\n \t    }\n \t}"}, {"sha": "4a49afb0f3a539ccf46e7fe7d6940840aa38e155", "filename": "gcc/testsuite/ChangeLog", "status": "modified", "additions": 5, "deletions": 0, "changes": 5, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/8c077737e2eaa0f0b17970d60ee88afb7be4fbc0/gcc%2Ftestsuite%2FChangeLog", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/8c077737e2eaa0f0b17970d60ee88afb7be4fbc0/gcc%2Ftestsuite%2FChangeLog", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/gcc%2Ftestsuite%2FChangeLog?ref=8c077737e2eaa0f0b17970d60ee88afb7be4fbc0", "patch": "@@ -1,3 +1,8 @@\n+2011-01-05  Janus Weil  <janus@gcc.gnu.org>\n+\n+\tPR fortran/47024\n+\t* gfortran.dg/storage_size_3.f08: New.\n+\n 2011-01-04  Jerry DeLisle  <jvdelisle@gcc.gnu.org>\n \n \tPR libgfortran/47154"}, {"sha": "71f50112de193543c277a689babdfcef3feac2a5", "filename": "gcc/testsuite/gfortran.dg/storage_size_3.f08", "status": "added", "additions": 12, "deletions": 0, "changes": 12, "blob_url": "https://github.com/Rust-GCC/gccrs/blob/8c077737e2eaa0f0b17970d60ee88afb7be4fbc0/gcc%2Ftestsuite%2Fgfortran.dg%2Fstorage_size_3.f08", "raw_url": "https://github.com/Rust-GCC/gccrs/raw/8c077737e2eaa0f0b17970d60ee88afb7be4fbc0/gcc%2Ftestsuite%2Fgfortran.dg%2Fstorage_size_3.f08", "contents_url": "https://api.github.com/repos/Rust-GCC/gccrs/contents/gcc%2Ftestsuite%2Fgfortran.dg%2Fstorage_size_3.f08?ref=8c077737e2eaa0f0b17970d60ee88afb7be4fbc0", "patch": "@@ -0,0 +1,12 @@\n+! { dg-do run }\n+!\n+! PR 47024: [OOP] STORAGE_SIZE (for polymorphic types): Segfault at run time\n+!\n+! Contributed by Tobias Burnus <burnus@gcc.gnu.org>\n+\n+type t\n+  integer(kind=4) :: a\n+end type\n+class(t), allocatable :: y\n+if (storage_size(y)/=32) call abort()\n+end "}]}
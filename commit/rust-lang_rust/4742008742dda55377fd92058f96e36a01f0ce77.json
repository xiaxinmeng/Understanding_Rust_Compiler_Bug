lob_url": "https://github.com/rust-lang/rust/blob/4742008742dda55377fd92058f96e36a01f0ce77/src%2Flibrustc_llvm%2Fbuild.rs", "raw_url": "https://github.com/rust-lang/rust/raw/4742008742dda55377fd92058f96e36a01f0ce77/src%2Flibrustc_llvm%2Fbuild.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Flibrustc_llvm%2Fbuild.rs?ref=4742008742dda55377fd92058f96e36a01f0ce77", "patch": "@@ -128,6 +128,19 @@ fn main() {\n     // of llvm-config, not the target that we're attempting to link.\n     let mut cmd = Command::new(&llvm_config);\n     cmd.arg(\"--libs\");\n+\n+    // Force static linking with \"--link-static\" if available.\n+    let mut version_cmd = Command::new(&llvm_config);\n+    version_cmd.arg(\"--version\");\n+    let version_output = output(&mut version_cmd);\n+    let mut parts = version_output.split('.');\n+    if let (Some(major), Some(minor)) = (parts.next().and_then(|s| s.parse::<u32>().ok()),\n+                                         parts.next().and_then(|s| s.parse::<u32>().ok())) {\n+        if major > 3 || (major == 3 && minor >= 8) {\n+            cmd.arg(\"--link-static\");\n+        }\n+    }\n+\n     if !is_crossed {\n         cmd.arg(\"--system-libs\");\n     }"}]}
  return NULL;\n }\n \n+/**\n+ * Checks for simple deadlocks.\n+ */\n+bool\n+rust_dom::is_deadlocked() {\n+    if (_live_domains.size() != 1) {\n+        // We cannot tell if we are deadlocked if other domains exists.\n+        return false;\n+    }\n+\n+    if (running_tasks.length() != 0) {\n+        // We are making progress and therefore we are not deadlocked.\n+        return false;\n+    }\n+\n+    if (_incoming_message_queue.is_empty() && blocked_tasks.length() > 0) {\n+        // We have no messages to process, no running tasks to schedule\n+        // and some blocked tasks therefore we are likely in a deadlock.\n+        log_state();\n+        return true;\n+    }\n+\n+    return false;\n+}\n+\n void\n rust_dom::log_all_state() {\n     for (uint32_t i = 0; i < _live_domains.size(); i++) {\n@@ -427,6 +452,8 @@ rust_dom::start_main_loop()\n     logptr(\"exit-task glue\", root_crate->get_exit_task_glue());\n \n     while (n_live_tasks() > 0) {\n+        A(this, is_deadlocked() == false, \"deadlock\");\n+\n         drain_incoming_message_queue();\n \n         rust_task *scheduled_task = schedule_task();"}, {"sha": "34d8c69462f2cae71ec5f18d9b34d71864774888", "filename": "src/rt/rust_dom.h", "status": "modified", "additions": 1, "deletions": 0, "changes": 1, "blob_url": "https://github.com/rust-lang/rust/blob/a4b8c74f9f6e41f40b30cf4ef49ea42a2cee9b4f/src%2Frt%2Frust_dom.h", "raw_url": "https://github.com/rust-lang/rust/raw/a4b8c74f9f6e41f40b30cf4ef49ea42a2cee9b4f/src%2Frt%2Frust_dom.h", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Frt%2Frust_dom.h?ref=a4b8c74f9f6e41f40b30cf4ef49ea42a2cee9b4f", "patch": "@@ -88,6 +88,7 @@ struct rust_dom\n \n     void reap_dead_tasks();\n     rust_task *schedule_task();\n+    bool is_deadlocked();\n     int start_main_loop();\n \n     void log_state();"}]}
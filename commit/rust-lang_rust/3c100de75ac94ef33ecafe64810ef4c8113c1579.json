hub.com/repos/rust-lang/rust/contents/src%2Flibcore%2Fstr%2Fmod.rs?ref=3c100de75ac94ef33ecafe64810ef4c8113c1579", "patch": "@@ -292,6 +292,18 @@ impl<'a> DoubleEndedIterator for Chars<'a> {\n     }\n }\n \n+impl<'a> Chars<'a> {\n+    /// View the underlying data as a subslice of the original data.\n+    ///\n+    /// This has the same lifetime as the original slice, and so the\n+    /// iterator can continue to be used while this exists.\n+    #[unstable(feature = \"iter_to_slice\", issue = \"27775\")]\n+    #[inline]\n+    pub fn as_str(&self) -> &'a str {\n+        unsafe { from_utf8_unchecked(self.iter.as_slice()) }\n+    }\n+}\n+\n /// Iterator for a string's characters and their byte offsets.\n #[derive(Clone)]\n #[stable(feature = \"rust1\", since = \"1.0.0\")]\n@@ -339,6 +351,18 @@ impl<'a> DoubleEndedIterator for CharIndices<'a> {\n     }\n }\n \n+impl<'a> CharIndices<'a> {\n+    /// View the underlying data as a subslice of the original data.\n+    ///\n+    /// This has the same lifetime as the original slice, and so the\n+    /// iterator can continue to be used while this exists.\n+    #[unstable(feature = \"iter_to_slice\", issue = \"27775\")]\n+    #[inline]\n+    pub fn as_str(&self) -> &'a str {\n+        self.iter.as_str()\n+    }\n+}\n+\n /// External iterator for a string's bytes.\n /// Use with the `std::iter` module.\n ///"}]}
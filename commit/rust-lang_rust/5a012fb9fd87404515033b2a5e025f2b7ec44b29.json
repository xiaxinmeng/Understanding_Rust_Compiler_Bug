process::Command;\n+\n+fn main() {\n+    let rev = rev().unwrap_or_else(|| \"???????\".to_string());\n+    println!(\"cargo:rustc-env=REV={}\", rev)\n+}\n+\n+fn rev() -> Option<String> {\n+    let output = Command::new(\"git\").args(&[\"rev-parse\", \"HEAD\"]).output().ok()?;\n+    let stdout = String::from_utf8(output.stdout).ok()?;\n+    let short_hash = stdout.get(0..7)?;\n+    Some(short_hash.to_owned())\n+}"}, {"sha": "cdd925c9f3efd1ff9759ebff4c6571cf7ce659d3", "filename": "crates/ra_lsp_server/src/main.rs", "status": "modified", "additions": 17, "deletions": 1, "changes": 18, "blob_url": "https://github.com/rust-lang/rust/blob/5a012fb9fd87404515033b2a5e025f2b7ec44b29/crates%2Fra_lsp_server%2Fsrc%2Fmain.rs", "raw_url": "https://github.com/rust-lang/rust/raw/5a012fb9fd87404515033b2a5e025f2b7ec44b29/crates%2Fra_lsp_server%2Fsrc%2Fmain.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/crates%2Fra_lsp_server%2Fsrc%2Fmain.rs?ref=5a012fb9fd87404515033b2a5e025f2b7ec44b29", "patch": "@@ -6,7 +6,10 @@ use ra_prof;\n \n fn main() -> Result<()> {\n     setup_logging()?;\n-    run_server()?;\n+    match Args::parse()? {\n+        Args::Version => println!(\"rust-analyzer {}\", env!(\"REV\")),\n+        Args::Run => run_server()?,\n+    }\n     Ok(())\n }\n \n@@ -22,6 +25,19 @@ fn setup_logging() -> Result<()> {\n     Ok(())\n }\n \n+enum Args {\n+    Version,\n+    Run,\n+}\n+\n+impl Args {\n+    fn parse() -> Result<Args> {\n+        let res =\n+            if std::env::args().any(|it| it == \"--version\") { Args::Version } else { Args::Run };\n+        Ok(res)\n+    }\n+}\n+\n fn run_server() -> Result<()> {\n     log::info!(\"lifecycle: server started\");\n "}]}
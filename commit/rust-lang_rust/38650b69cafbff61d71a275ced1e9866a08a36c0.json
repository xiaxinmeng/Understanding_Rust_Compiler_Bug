/rust/raw/38650b69cafbff61d71a275ced1e9866a08a36c0/src%2Flibcore%2Fhint.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Flibcore%2Fhint.rs?ref=38650b69cafbff61d71a275ced1e9866a08a36c0", "patch": "@@ -49,3 +49,26 @@ use intrinsics;\n pub unsafe fn unreachable_unchecked() -> ! {\n     intrinsics::unreachable()\n }\n+\n+/// Save power or switch hyperthreads in a busy-wait spin-loop.\n+///\n+/// This function is deliberately more primitive than\n+/// [`std::thread::yield_now`](../../std/thread/fn.yield_now.html) and\n+/// does not directly yield to the system's scheduler.\n+/// In some cases it might be useful to use a combination of both functions.\n+/// Careful benchmarking is advised.\n+///\n+/// On some platforms this function may not do anything at all.\n+#[inline]\n+#[unstable(feature = \"renamed_spin_loop\", issue = \"55002\")]\n+pub fn spin_loop() {\n+    #[cfg(any(target_arch = \"x86\", target_arch = \"x86_64\"))]\n+    unsafe {\n+        asm!(\"pause\" ::: \"memory\" : \"volatile\");\n+    }\n+\n+    #[cfg(target_arch = \"aarch64\")]\n+    unsafe {\n+        asm!(\"yield\" ::: \"memory\" : \"volatile\");\n+    }\n+}"}, {"sha": "8992e513e83a4ef9da525fd3e17921783238bd0e", "filename": "src/libcore/sync/atomic.rs", "status": "modified", "additions": 3, "deletions": 9, "changes": 12, "blob_url": "https://github.com/rust-lang/rust/blob/38650b69cafbff61d71a275ced1e9866a08a36c0/src%2Flibcore%2Fsync%2Fatomic.rs", "raw_url": "https://github.com/rust-lang/rust/raw/38650b69cafbff61d71a275ced1e9866a08a36c0/src%2Flibcore%2Fsync%2Fatomic.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Flibcore%2Fsync%2Fatomic.rs?ref=38650b69cafbff61d71a275ced1e9866a08a36c0", "patch": "@@ -84,6 +84,8 @@ use intrinsics;\n use cell::UnsafeCell;\n use fmt;\n \n+use hint::spin_loop;\n+\n /// Save power or switch hyperthreads in a busy-wait spin-loop.\n ///\n /// This function is deliberately more primitive than\n@@ -96,15 +98,7 @@ use fmt;\n #[inline]\n #[stable(feature = \"spin_loop_hint\", since = \"1.24.0\")]\n pub fn spin_loop_hint() {\n-    #[cfg(any(target_arch = \"x86\", target_arch = \"x86_64\"))]\n-    unsafe {\n-        asm!(\"pause\" ::: \"memory\" : \"volatile\");\n-    }\n-\n-    #[cfg(target_arch = \"aarch64\")]\n-    unsafe {\n-        asm!(\"yield\" ::: \"memory\" : \"volatile\");\n-    }\n+    spin_loop()\n }\n \n /// A boolean type which can be safely shared between threads."}, {"sha": "83db3f347a761ff1ea9cc9b28f17804254617e75", "filename": "src/libstd/lib.rs", "status": "modified", "additions": 1, "deletions": 0, "changes": 1, "blob_url": "https://github.com/rust-lang/rust/blob/38650b69cafbff61d71a275ced1e9866a08a36c0/src%2Flibstd%2Flib.rs", "raw_url": "https://github.com/rust-lang/rust/raw/38650b69cafbff61d71a275ced1e9866a08a36c0/src%2Flibstd%2Flib.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Flibstd%2Flib.rs?ref=38650b69cafbff61d71a275ced1e9866a08a36c0", "patch": "@@ -286,6 +286,7 @@\n #![feature(staged_api)]\n #![feature(stmt_expr_attributes)]\n #![feature(str_internals)]\n+#![feature(renamed_spin_loop)]\n #![feature(rustc_private)]\n #![feature(thread_local)]\n #![feature(toowned_clone_into)]"}]}
l": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Fui%2Fprocess-termination%2Fprocess-termination-blocking-io.rs?ref=db1fbd4a11db579436f68be3a8f5fe03484aa45d", "patch": "@@ -0,0 +1,18 @@\n+// program should terminate even if a thread is blocked on I/O.\n+// https://github.com/fortanix/rust-sgx/issues/109\n+\n+// run-pass\n+\n+use std::{net::TcpListener, sync::mpsc, thread};\n+\n+fn main() {\n+    let (tx, rx) = mpsc::channel();\n+    thread::spawn(move || {\n+        let listen = TcpListener::bind(\"0:0\").unwrap();\n+        tx.send(()).unwrap();\n+        while let Ok(_) = listen.accept() {}\n+    });\n+    rx.recv().unwrap();\n+    for _ in 0..3 { thread::yield_now(); }\n+    println!(\"Exiting main thread\");\n+}"}, {"sha": "7098a34512ee3702960e9331b52695ebc00197e3", "filename": "src/test/ui/process-termination/process-termination-simple.rs", "status": "added", "additions": 12, "deletions": 0, "changes": 12, "blob_url": "https://github.com/rust-lang/rust/blob/db1fbd4a11db579436f68be3a8f5fe03484aa45d/src%2Ftest%2Fui%2Fprocess-termination%2Fprocess-termination-simple.rs", "raw_url": "https://github.com/rust-lang/rust/raw/db1fbd4a11db579436f68be3a8f5fe03484aa45d/src%2Ftest%2Fui%2Fprocess-termination%2Fprocess-termination-simple.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Fui%2Fprocess-termination%2Fprocess-termination-simple.rs?ref=db1fbd4a11db579436f68be3a8f5fe03484aa45d", "patch": "@@ -0,0 +1,12 @@\n+// program should terminate when std::process::exit is called from any thread\n+\n+// run-pass\n+\n+use std::{process, thread};\n+\n+fn main() {\n+    let h = thread::spawn(|| {\n+        process::exit(0);\n+    });\n+    let _ = h.join();\n+}"}]}
m/repos/rust-lang/rust/contents/clippy_lints%2Fsrc%2Fidentity_op.rs?ref=ba70842c625abed2a61aa84dd0a7bd4b7b874063", "patch": "@@ -61,10 +61,13 @@ impl<'tcx> LateLintPass<'tcx> for IdentityOp {\n }\n \n fn is_allowed(cx: &LateContext<'_>, cmp: BinOp, left: &Expr<'_>, right: &Expr<'_>) -> bool {\n-    // `1 << 0` is a common pattern in bit manipulation code\n-    cmp.node == BinOpKind::Shl\n-        && constant_simple(cx, cx.typeck_results(), right) == Some(Constant::Int(0))\n-        && constant_simple(cx, cx.typeck_results(), left) == Some(Constant::Int(1))\n+    // This lint applies to integers\n+    !cx.typeck_results().expr_ty(left).is_integral()\n+        || !cx.typeck_results().expr_ty(right).is_integral()\n+        // `1 << 0` is a common pattern in bit manipulation code\n+        || (cmp.node == BinOpKind::Shl\n+            && constant_simple(cx, cx.typeck_results(), right) == Some(Constant::Int(0))\n+            && constant_simple(cx, cx.typeck_results(), left) == Some(Constant::Int(1)))\n }\n \n fn check(cx: &LateContext<'_>, e: &Expr<'_>, m: i8, span: Span, arg: Span) {"}]}
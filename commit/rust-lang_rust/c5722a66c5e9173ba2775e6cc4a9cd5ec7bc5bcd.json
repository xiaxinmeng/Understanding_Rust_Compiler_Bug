dbghelp-syminitialize\n+        if let Ok(path) = env::current_exe() {\n+            if let Some(path) = path.parent() {\n+                env::set_var(\"_NT_SYMBOL_PATH\", path);\n+            }\n+        }\n+    }\n     if env::var(\"RUST_BACKTRACE\").is_err() {\n         env::set_var(\"RUST_BACKTRACE\", \"short\");\n     }"}]}
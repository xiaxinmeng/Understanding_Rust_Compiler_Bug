d\n rust_task::kill() {\n     if (dead()) {\n         // Task is already dead, can't kill what's already dead.\n+        fail_parent();\n         return;\n     }\n \n@@ -308,6 +309,14 @@ rust_task::conclude_failure() {\n     die();\n     // Unblock the task so it can unwind.\n     unblock();\n+    fail_parent();\n+    failed = true;\n+    notify_tasks_waiting_to_join();\n+    yield(4);\n+}\n+\n+void\n+rust_task::fail_parent() {\n     if (supervisor) {\n         DLOG(sched, task,\n              \"task %s @0x%\" PRIxPTR\n@@ -318,9 +327,6 @@ rust_task::conclude_failure() {\n     // FIXME: implement unwinding again.\n     if (NULL == supervisor && propagate_failure)\n         sched->fail();\n-    failed = true;\n-    notify_tasks_waiting_to_join();\n-    yield(4);\n }\n \n void"}, {"sha": "d1a9b66f9e534dc9b69f22bd315ef373d85ec9fc", "filename": "src/rt/rust_task.h", "status": "modified", "additions": 1, "deletions": 0, "changes": 1, "blob_url": "https://github.com/rust-lang/rust/blob/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Frt%2Frust_task.h", "raw_url": "https://github.com/rust-lang/rust/raw/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Frt%2Frust_task.h", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Frt%2Frust_task.h?ref=103197bc422b6f1ae9958cc5c6a928d94d3e3366", "patch": "@@ -158,6 +158,7 @@ rust_task : public kernel_owned<rust_task>, rust_cond\n     // Fail self, assuming caller-on-stack is this task.\n     void fail();\n     void conclude_failure();\n+    void fail_parent();\n \n     // Disconnect from our supervisor.\n     void unsupervise();"}, {"sha": "416fbcfddd52f6745bfc7b0c3410cc7c8b88045c", "filename": "src/test/run-fail/linked-failure2.rs", "status": "added", "additions": 17, "deletions": 0, "changes": 17, "blob_url": "https://github.com/rust-lang/rust/blob/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure2.rs", "raw_url": "https://github.com/rust-lang/rust/raw/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure2.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Frun-fail%2Flinked-failure2.rs?ref=103197bc422b6f1ae9958cc5c6a928d94d3e3366", "patch": "@@ -0,0 +1,17 @@\n+// -*- rust -*-\n+\n+// error-pattern:fail\n+use std;\n+import std::task;\n+import std::comm::chan;\n+import std::comm::port;\n+import std::comm::recv;\n+\n+fn child() { fail; }\n+\n+fn main() {\n+    let p = port::<int>();\n+    let f = child;\n+    task::spawn(f);\n+    task::yield();\n+}"}, {"sha": "08c18224568797f0f4d149e5b934c6c39dc6bd70", "filename": "src/test/run-fail/linked-failure3.rs", "status": "added", "additions": 23, "deletions": 0, "changes": 23, "blob_url": "https://github.com/rust-lang/rust/blob/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure3.rs", "raw_url": "https://github.com/rust-lang/rust/raw/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure3.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Frun-fail%2Flinked-failure3.rs?ref=103197bc422b6f1ae9958cc5c6a928d94d3e3366", "patch": "@@ -0,0 +1,23 @@\n+// -*- rust -*-\n+\n+// error-pattern:fail\n+use std;\n+import std::task;\n+import std::comm::port;\n+import std::comm::recv;\n+\n+fn grandchild() { fail; }\n+\n+fn child() {\n+    let p = port::<int>();\n+    let f = grandchild;\n+    task::spawn(f);\n+    let x = recv(p);\n+}\n+\n+fn main() {\n+    let p = port::<int>();\n+    let f = child;\n+    task::spawn(f);\n+    let x = recv(p);\n+}"}, {"sha": "8030f60c6e8c6dec6af2a080e5313f1eb79e7bf5", "filename": "src/test/run-fail/linked-failure4.rs", "status": "added", "additions": 31, "deletions": 0, "changes": 31, "blob_url": "https://github.com/rust-lang/rust/blob/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure4.rs", "raw_url": "https://github.com/rust-lang/rust/raw/103197bc422b6f1ae9958cc5c6a928d94d3e3366/src%2Ftest%2Frun-fail%2Flinked-failure4.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Frun-fail%2Flinked-failure4.rs?ref=103197bc422b6f1ae9958cc5c6a928d94d3e3366", "patch": "@@ -0,0 +1,31 @@\n+// -*- rust -*-\n+// xfail-test\n+// error-pattern:1 == 2\n+use std;\n+import std::task;\n+import std::comm::chan;\n+import std::comm::port;\n+import std::comm::recv;\n+\n+fn child() { assert (1 == 2); }\n+\n+fn parent() {\n+    let p = port::<int>();\n+    let f = child;\n+    task::spawn(f);\n+    let x = recv(p);\n+}\n+\n+// This task is not linked to the failure chain, but since the other\n+// tasks are going to fail the kernel, this one will fail too\n+fn sleeper() {\n+    let p = port::<int>();\n+    let x = recv(p);\n+}\n+\n+fn main() {\n+    let f = parent;\n+    let g = sleeper;\n+    task::spawn(f);\n+    task::spawn(g);\n+}\n\\ No newline at end of file"}]}
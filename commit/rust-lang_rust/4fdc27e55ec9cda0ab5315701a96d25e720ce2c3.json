or distributed\n+// except according to those terms.\n+\n+// Tests that enum-to-float-casts do *signed* integer-to-float conversion.\n+\n+enum E {\n+    L0 = -1,\n+    H0 = 1\n+}\n+\n+enum F {\n+    L1 = 1,\n+    H1 = 0xFFFFFFFFFFFFFFFF\n+}\n+\n+static C0: f32 = L0 as f32;\n+static C1: f32 = H1 as f32;\n+\n+pub fn main() {\n+    let a = L0 as f32;\n+    let b = C0;\n+    let c = H1 as f32;\n+    let d = C1;\n+    assert_eq!(a, -1.0f32);\n+    assert_eq!(b, -1.0f32);\n+    assert_eq!(c, -1.0f32);\n+    assert_eq!(d, -1.0f32);\n+}"}]}
+    let raw = unsafe {\n+        std::mem::transmute::<&[u8], [usize; 2]>(&[42])\n+    };\n+    let ptr = raw[0] + raw[1];\n+    let ptr = ptr as *const u8;\n+    // The pointer is one-past-the end, but we decrement it into bounds before using it\n+    assert_eq!(unsafe { *ptr.offset(-1) }, 42);\n+}"}]}
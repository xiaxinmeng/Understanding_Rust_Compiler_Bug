n+    ...\n }\n \n const enum WorkspaceSymbolSearchScope {\n-    Workspace = \"Workspace\",\n-    WorkspaceAndDependencies = \"WorkspaceAndDependencies\"\n+    Workspace = \"workspace\",\n+    WorkspaceAndDependencies = \"workspaceAndDependencies\"\n }\n \n const enum WorkspaceSymbolSearchKind {\n-    OnlyTypes = \"OnlyTypes\",\n-    AllSymbols = \"AllSymbols\"\n+    OnlyTypes = \"onlyTypes\",\n+    AllSymbols = \"allSymbols\"\n }\n ```"}]}
u;\n     while i > 0 {\n@@ -18,3 +45,9 @@ fn main() {\n         expected_len *= 2u;\n     }\n }\n+\n+fn main() {\n+    test_heap_to_heap();\n+    test_stack_to_heap();\n+    test_loop();\n+}"}]}
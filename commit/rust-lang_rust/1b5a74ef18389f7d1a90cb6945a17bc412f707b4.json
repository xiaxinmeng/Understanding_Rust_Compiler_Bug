.ts", "raw_url": "https://github.com/rust-lang/rust/raw/1b5a74ef18389f7d1a90cb6945a17bc412f707b4/editors%2Fcode%2Fsrc%2Fsnippets.ts", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/editors%2Fcode%2Fsrc%2Fsnippets.ts?ref=1b5a74ef18389f7d1a90cb6945a17bc412f707b4", "patch": "@@ -6,6 +6,10 @@ export async function applySnippetWorkspaceEdit(edit: vscode.WorkspaceEdit) {\n     assert(edit.entries().length === 1, `bad ws edit: ${JSON.stringify(edit)}`);\n     const [uri, edits] = edit.entries()[0];\n \n+    if (vscode.window.activeTextEditor?.document.uri !== uri) {\n+        // `vscode.window.visibleTextEditors` only contains editors whose contents are being displayed\n+        await vscode.window.showTextDocument(uri, {});\n+    }\n     const editor = vscode.window.visibleTextEditors.find((it) => it.document.uri.toString() === uri.toString());\n     if (!editor) return;\n     await applySnippetTextEdits(editor, edits);"}]}
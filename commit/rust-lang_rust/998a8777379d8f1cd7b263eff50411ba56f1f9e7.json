e unsound.\n+use std::sync::Mutex;\n+use std::cell::Cell;\n+\n+fn test_sync<T: Sync>(_t: T) {}\n+\n+fn main()\n+{\n+    let m = Mutex::new(Cell::new(0i32));\n+    let guard = m.lock().unwrap();\n+    test_sync(guard); //~ ERROR the trait bound\n+}"}]}
%2Flibrustc%2Fmiddle%2Flint.rs?ref=15871a7458feee550c9ba65db802ed0fb5db2ae7", "patch": "@@ -786,6 +786,18 @@ fn check_item_heap(cx: ty::ctxt, it: @ast::item) {\n       _ => ()\n     }\n \n+    // If it's a struct, we also have to check the fields' types\n+    match it.node {\n+        ast::item_struct(struct_def, _) => {\n+            for struct_def.fields.each |struct_field| {\n+                check_type(cx, struct_field.node.id, it.id,\n+                           struct_field.span,\n+                           ty::node_id_to_type(cx, struct_field.node.id));\n+            }\n+        }\n+        _ => ()\n+    }\n+\n     let visit = item_stopping_visitor(\n         visit::mk_simple_visitor(@visit::SimpleVisitor {\n             visit_expr: |e: @ast::expr| {"}]}
s file may not be copied, modified, or distributed\n+// except according to those terms.\n+\n+// Check that mutable promoted length zero arrays don't check for conflicting\n+// access\n+\n+// run-pass\n+\n+#![feature(nll)]\n+\n+pub fn main() {\n+    let mut x: Vec<&[i32; 0]> = Vec::new();\n+    for i in 0..10 {\n+        x.push(&[]);\n+    }\n+}"}]}
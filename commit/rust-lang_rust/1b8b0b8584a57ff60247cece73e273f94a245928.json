it::vt<ctx>) {\n       expr_copy(expr) { check_copy_ex(cx, expr, false); }\n       // Vector add copies.\n       expr_binary(add., ls, rs) { maybe_copy(cx, ls); maybe_copy(cx, rs); }\n-      expr_rec(fields, _) {\n+      expr_rec(fields, def) {\n         for field in fields { maybe_copy(cx, field.node.expr); }\n+        alt def {\n+          some(ex) {\n+            // All noncopyable fields must be overridden\n+            let t = ty::expr_ty(cx.tcx, ex);\n+            let ty_fields = alt ty::struct(cx.tcx, t) { ty::ty_rec(f) { f } };\n+            for tf in ty_fields {\n+                if !std::vec::any({|f| f.node.ident == tf.ident}, fields) &&\n+                   ty::type_kind(cx.tcx, tf.mt.ty) == kind_noncopyable {\n+                    cx.tcx.sess.span_err(ex.span,\n+                                         \"copying a noncopyable value\");\n+                }\n+            }\n+          }\n+          _ {}\n+        }\n       }\n       expr_tup(exprs) | expr_vec(exprs, _) {\n         for expr in exprs { maybe_copy(cx, expr); }"}, {"sha": "e4e743a7ad0f447aa511f1bb66daedb2fcb28bfb", "filename": "src/test/compile-fail/record-with-resource.rs", "status": "added", "additions": 13, "deletions": 0, "changes": 13, "blob_url": "https://github.com/rust-lang/rust/blob/1b8b0b8584a57ff60247cece73e273f94a245928/src%2Ftest%2Fcompile-fail%2Frecord-with-resource.rs", "raw_url": "https://github.com/rust-lang/rust/raw/1b8b0b8584a57ff60247cece73e273f94a245928/src%2Ftest%2Fcompile-fail%2Frecord-with-resource.rs", "contents_url": "https://api.github.com/repos/rust-lang/rust/contents/src%2Ftest%2Fcompile-fail%2Frecord-with-resource.rs?ref=1b8b0b8584a57ff60247cece73e273f94a245928", "patch": "@@ -0,0 +1,13 @@\n+// error-pattern: copying a noncopyable value\n+\n+resource my_resource(x: int) {\n+    log_err x;\n+}\n+\n+fn main() {\n+    {\n+        let a = {x: 0, y: my_resource(20)};\n+        let b = {x: 2 with a};\n+        log_err (a, b);\n+    }\n+}"}]}